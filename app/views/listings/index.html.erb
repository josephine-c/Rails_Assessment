<p id="notice"><%= notice %></p>

<div class="title-container">
  <h1>Job Listings</h1>
</div>

<div class="blocks">
  <% @listings.each do |listing| %>
    <div class="card">
      <div class="thumbnail">
        <div class="caption">
          <h3>Listing <%= link_to listing.id, listing %></h3>
            <p>Purchaser: <%= listing.user.email %></p>
            <p>Shop: <%= listing.shop.name %></p>
            <p>Date created: <%= listing.created_at %></p>
            <p>Status: <%= listing.status %></p>
            <p>Total: $<%= listing.total %></p>
            
              <table>
                <thead>
                  <tr>
                    <th colspan="3"></th>
                  </tr>
                </thead>
                <tbody>
                    <tr>
                      <td><%= link_to 'Show', listing, class: "btn btn-default", id: "show-job-button" %></td>
                    </tr>
                </tbody>
              </table>
        </div>
      </div>
    </div>
    <% end %>
</div>
<br>