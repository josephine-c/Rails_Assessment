<p id="notice"><%= notice %></p>

<div class="title-container">
  <h1>Shopperoo Listings</h1>
</div>

<%# <%= link_to 'New Listing', new_listing_path %>

<div class="listings">
  <% @listings.each do |listing| %>
    <div class="card">
      <div class="thumbnail">
        <div class="caption">
          <h3>Listing <%= link_to listing.id, listing %></h3>
            <%# <%= image_tag shop.picture if shop.picture.attached? %>
            <p>Purchaser:<%= listing.user.email %></p>
            <p>Shop:<%= listing.shop.name %></p>
            <p>Date created:<%= listing.created_at %></p>
            <p>Status:<%= listing.status %></p>
            <p>Total: $<%= listing.total %></p>  
              <table>
                <thead>
                  <tr>
                    <th colspan="3"></th>
                  </tr>
                </thead>
                <tbody>
                    <tr>
                      <td><%= link_to 'Show', listing, class: "btn btn-default" %></td>
                      <%# <td><%= link_to 'Accept Job', edit_listing_path(listing) %>
                      <%# <td><%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' } %>
                    </tr>
                </tbody>
              </table>
        </div>
      </div>
    </div>
    <% end %>
</div>
<br>