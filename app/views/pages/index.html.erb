
  <h1>Welcome To Shopperoo</h1>

<% if(current_user != nil) %>
<%# write our logged in home %>
  <%= form_with url: shops_path, method: "get" do |f| %>
    <%= label_tag(:query, "Search for shop/store:") %>
    <%= text_field_tag(:query) %>
    <%= submit_tag("Search") %>

<%# need to insert logo picture %>
  <h2>Happy Shoppings!</h2>

  <div>
    <h2>My Listings</h2>

    <%= @lists.each do |list| %>
      <div class="card">
      <%# <%= image_tag shop.picture if shop.picture.attached? %>
      <h3>Listing <%= list.id %></h3>
      <p>Shop:<%= list.shop.name %></p>
      <p>Date created:<%= list.created_at %></p>
      <p>Status:<%= list.status %></p>
      <p>Total: $<%= list.total %></p>

      <table>
        <thead>
          <tr>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= link_to 'Show', list %></td>
            <%# <td><%= link_to 'Edit', edit_listing_path(listing) %>
            <%# <td><%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' } %>
          </tr>
        </tbody>
      </table>
    <% end %>
  </div>

  <div>
    <h2>My Jobs</h2>
      <%= @deliveries.each do |delivery| %> 
      <div class="card">
      <%# <%= image_tag shop.picture if shop.picture.attached? %>
      <p>Purchaser:<%= delivery.user.email %></p>
      <p>Shop:<%= delivery.shop.name %></p>
      <p>Date created:<%= delivery.created_at %></p>
      <p>Status:<%= delivery.status %></p>
      <p>Total: $<%= delivery.total %></p>
  <table>
    <thead>
      <tr>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= link_to 'Show', delivery %></td>
      </tr>
    </tbody>
    </table>
    <% end %>
  </div>
<% end %>

<% else %>
  <%# write our not logged in home %>
  <h2>Your adventure to happy fast shopping awaits! Join or Login now</h2>   
<% end %>