<p id="notice"><%= notice %></p>

<div class="title-container">
<h1>Shops</h1>
</div>

<div class="blocks">
  <% @shops.each do |shop| %>
    <div class="card">
      <div class="thumbnail">
        <div class="caption">
          <h3><%= link_to shop.name, shop %></h3>
            <p><%= shop.description %></p>
            <%= link_to 'Show Products', shop, class: "btn btn-default" %>
        </div>
      </div>
    </div>
    <% end %>
</div>
  
<br>